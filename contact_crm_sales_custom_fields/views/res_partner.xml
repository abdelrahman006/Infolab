<odoo>    <!-- Inherit Form View to Modify it -->    <record id="view_partner_form" model="ir.ui.view">        <field name="name">res.partner.add.tabs.SButton</field>        <field name="model">res.partner</field>        <field name="inherit_id" ref="base.view_partner_form"/>        <field name="arch" type="xml">            <xpath expr="//div[@name='button_box']" position="inside">                <button name="action_view_quotation_users" type="object" class="oe_stat_button"                        icon="fa-user">                    <field string="Users NO." name="users_no" widget="statinfo"/>                </button>            </xpath>            <xpath expr="//page[@name='internal_notes']" position="after">                <page name="company_details" string="Company Details">                    <group>                        <group>                            <field name="company_type"/>                            <field name="ownership"/>                            <field name="employees_no"/>                            <field name="annual_revenue"/>                        </group>                        <group>                            <field name="assistant_name"/>                            <field name="assistant_email"/>                            <field name="assistant_mobile"/>                        </group>                    </group>                </page>                <page name="contact" string="Contact">                    <group>                        <group>                            <field name="billing_street"/>                            <field name="shipping_street"/>                            <field name="billing_city"/>                            <field name="shipping_city"/>                            <field name="billing_state"/>                        </group>                        <group>                            <field name="shipping_state"/>                            <field name="billing_code"/>                            <field name="billing_country"/>                            <field name="shipping_country"/>                            <field name="convolo_account"/>                        </group>                    </group>                </page>            </xpath>        </field>    </record></odoo>