<odoo>
    <record id="crm_type_tree" model="ir.ui.view">
        <field name="name">crm.type.tree</field>
        <field name="model">crm.type</field>
        <field name="arch" type="xml">
            <tree string="Crm Types" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="crm_type_action" model="ir.actions.act_window">
        <field name="name">CRM Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
        </field>
    </record>

    <menuitem id="crm_type_menu" name="CRM Types" parent="crm.crm_menu_config" action="crm_type_action" sequence="25"/>
</odoo>