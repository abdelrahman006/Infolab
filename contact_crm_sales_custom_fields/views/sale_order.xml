<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.line.users.number</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/form/group/group/div[@name='lead']" position="after">
                <field name="users_no"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="users_no"/>
            </xpath>


        </field>
    </record>

    <record id="view_quotation_users_tree" model="ir.ui.view">
        <field name="name">View Number Of Users For Contact</field>
        <field name="model">sale.order.line</field>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree string="Number Of Users" create="0">
                <field name="order_id"/>
                <field name="users_no"/>
            </tree>
        </field>
    </record>
</odoo>